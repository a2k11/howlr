<!DOCTYPE html>
<html>
<head>
  <title>Howlr</title>
  <%= stylesheet_link_tag %>
  <%= javascript_include_tag %>
  <%= csrf_meta_tags %>
</head>
<body>

<% if signed_in? %>
  <%= link_to "Sign out", session_path, method: :delete %>
<% else %>
  <%= link_to "Sign in", new_session_path %>
  <%= link_to "Sign up", new_user_path %>
<% end %>

<%= yield %>

</body>
</html>
