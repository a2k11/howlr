<!DOCTYPE html>
<html>
<head>
  <title>Howlr</title>
  <%= stylesheet_link_tag %>
  <%= javascript_include_tag %>
  <%= csrf_meta_tags %>
</head>
<body>

<% if signed_in? %>
  <div>
    <h2><%= "Signed in As: #{current_user.email.capitalize}" %></h2>
  </div>
  <div>
    <%= link_to "Sign out", session_path, method: :delete %>
  </div>  
<% else %>
  <%= link_to "Sign in", new_session_path %>
  <%= link_to "Sign up", new_user_path %>
<% end %>

<%= yield %>

</body>
</html>
